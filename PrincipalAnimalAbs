package interface1;

public class PrincipalAnimalAbs {

	public static void main(String[] args) {
	
	LoboAbs lobo = 	new LoboAbs();
	GatoAbs gato = new GatoAbs();	
	LeaoAbs leao = new LeaoAbs();
	TigreAbs tigre = new TigreAbs();
	CachorroAbs cachorro = new CachorroAbs();
	
	System.out.println("LOBO");

	lobo.setNome("Husk");
	lobo.setRaca("Siberiano");
	lobo.setSexo("Macho");
	
	System.out.println("Nome: " + lobo.getNome());
	System.out.println("Raça: " + lobo.getRaca());
	System.out.println("Sexo: " + lobo.getSexo());
	lobo.emitirSom();

	System.out.println("GATO");

	gato.setNome("Pandora");
	gato.setRaca("Persa");
	gato.setSexo("Fêmea");
	
	System.out.println("Nome: " + gato.getNome());
	System.out.println("Raça: " + gato.getRaca());
	System.out.println("Sexo: " + gato.getSexo());
	gato.emitirSom();

	System.out.println("LEÃO");

	leao.setNome("Simba");
	leao.setRaca("Asiático");
	leao.setSexo("Macho");
	
	System.out.println("Nome: " + leao.getNome());
	System.out.println("Raça: " + leao.getRaca());
	System.out.println("Sexo: " + leao.getSexo());
	leao.emitirSom();

	System.out.println("TIGRE");

	tigre.setNome("Diego");
	tigre.setRaca("Dente de sabre");
	tigre.setSexo("Macho");
	
	System.out.println("Nome: " + tigre.getNome());
	System.out.println("Raça: " + tigre.getRaca());
	System.out.println("Sexo: " + tigre.getSexo());
	tigre.emitirSom();

	System.out.println("CACHORRO");

	cachorro.setNome("Mike");
	cachorro.setRaca("Salsicha");
	cachorro.setSexo("Macho");
	
	System.out.println("Nome: " + cachorro.getNome());
	System.out.println("Raça: " + cachorro.getRaca());
	System.out.println("Sexo: " + cachorro.getSexo());
	cachorro.emitirSom();

	

	
	}

}
